<h2><%= @cocktail.name %></h2>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> | <%= dose.description %>    <%= link_to "Delete", dose_path(dose), method: :delete, class: "btn btn-danger" %></li>
<% end %>
</ul>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.submit "add an ingredient", class: "btn btn-primary"%>
<% end %>

